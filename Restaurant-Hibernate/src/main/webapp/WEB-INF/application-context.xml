<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource">
        <property name="driverClass" value="${jdbc.driver.class}"/>
        <property name="jdbcUrl" value="${jdbc.url}" />
        <property name="user" value="${jdbc.user}" />
        <property name="password" value="${jdbc.password}"/>
        <property name="minPoolSize" value="${jdbc.min.connection}"/>
        <property name="maxPoolSize" value="${jdbc.max.connections}"/>
        <property name="acquireIncrement" value="${jdbc.acquire.increment}"/>
    </bean>
    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:jdbc.properties"/>
    </bean>

    <bean class="com.goit.homeworks.restaurant.dao.jdbc.JdbcEmployeeDao" id="employeeDao">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource"/>
    </bean>

    <bean class="com.goit.homeworks.restaurant.dao.jdbc.JdbcPositionDao" id="positionDao">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource"/>
    </bean>
    <bean id="categoryDao" class="com.goit.homeworks.restaurant.dao.jdbc.JdbcCategoryDao">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource"/>
    </bean>
    <bean id="dishDao" class="com.goit.homeworks.restaurant.dao.jdbc.JdbcDishDao">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource"/>
    </bean>
    <bean class="com.goit.homeworks.restaurant.services.EmployeeService" id="employeeService">
        <property name="positionDao" ref="positionDao"/>
        <property name="employeeDao" ref="employeeDao"/>
    </bean>
    <bean id="dishService" class="com.goit.homeworks.restaurant.services.DishService">
        <property name="dishDao" ref="dishDao"/>
        <property name="categoryDao" ref="categoryDao" />
    </bean>
    <bean id="menuDao" class="com.goit.homeworks.restaurant.dao.jdbc.JdbcMenuDao">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource"/>
    </bean>
    <bean id="menuListDao" class="com.goit.homeworks.restaurant.dao.jdbc.JdbcMenuListDao">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource"/>
    </bean>
    <bean id="menuService" class="com.goit.homeworks.restaurant.services.MenuService">
        <property name="dishDao" ref="dishDao"/>
        <property name="menuDao" ref="menuDao"/>
        <property name="menuListDao" ref="menuListDao"/>
    </bean>
    <bean id="orderDao" class="com.goit.homeworks.restaurant.dao.jdbc.JdbcOrderDao">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource"/>
    </bean>
    <bean id="ingredientListDao" class="com.goit.homeworks.restaurant.dao.jdbc.JdbcIngredientListDao">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource"/>
    </bean>
    <bean id="preparedDishDao" class="com.goit.homeworks.restaurant.dao.jdbc.JdbcPreparedDishDao">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource" />
    </bean>
    <bean id="ingredientDao" class="com.goit.homeworks.restaurant.dao.jdbc.JdbcIngredientDao">
        <constructor-arg type="javax.sql.DataSource" ref="dataSource"/>
    </bean>
    <bean id="orderService" class="com.goit.homeworks.restaurant.services.OrderService">
        <property name="orderDao" ref="orderDao"/>
        <property name="dishDao" ref="dishDao" />
        <property name="employeeDao" ref="employeeDao"/>
        <property name="preparedDishDao" ref="preparedDishDao"/>
        <property name="ingredientDao" ref="ingredientDao"/>
        <property name="ingredientListDao" ref="ingredientListDao"/>
    </bean>
    <bean id="ingredientService" class="com.goit.homeworks.restaurant.services.IngredientService">
        <property name="ingredientDao" ref="ingredientDao"/>
    </bean>
</beans>